<Window x:Class="Check_BirtNum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Check_BirtNum"
        mc:Ignorable="d"
        Title="Kontrola rodneho cisla" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Kontrola Rodného čísla a Evidenčního čísla pojištěnce" HorizontalAlignment="Center" FontSize="30" Margin="0,30,0,0" FontWeight="Bold"/>
            <Label Content="Zadejte Rodné číslo:" Margin="0,135,0,0" VerticalAlignment="Center" Width="450" FontSize="15"/>
            <Border BorderThickness="1.5" BorderBrush="Black" Height="30" Width="400" Margin="0,5,0,0">
                <TextBox Name="Input" FontSize="18" Width="400" BorderThickness="0" KeyDown="Check_Key"/>
            </Border>
            <Button x:Name="Check" Click="Check_Click" Content="Odeslat" Width="100" Height="30" FontSize="18" Margin="0,20,0,0" />
        </StackPanel>

    </Grid>
</Window>
